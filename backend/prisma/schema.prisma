generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Album {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  dominantEmotion String
  albumName       String
  picUrl          String 
  emotions        Json // stores: {"happy":0.65,"sad":0.05,"angry":0.03,"surprised":0.02,"disgust":0.01,"fear":0.01,"neutral":0.23}
  userId          String
  createdBy       String
  albumId         String
  likes           Int      @default(0)
  dateCreated     DateTime @default(now())
}

model History {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String
  createdBy   String
  verb        String
  dateCreated DateTime @default(now())
}
