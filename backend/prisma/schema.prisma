generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Album {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  dominantEmotion String
  picUrl          String
  userId          String
  createdBy       String
  albumId         String
  likes           Int      @default(0)
  dateCreated     DateTime @default(now())
}

model History {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String
  verb        String
  dateCreated DateTime @default(now())
}
